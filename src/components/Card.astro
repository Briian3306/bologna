    <div class="w-full md:w-2/5 lg:w-3/5 flex flex-col">
        {title && <h2 class="text-6xl font-bold mb-2 text-barley-corn-200">{title}</h2>}
        {subtitle && <h3 class="text-4xl font-bold mb-3">{subtitle}</h3>}
