<nav class="border-gray-200 fixed top-0 left-0 right-0 z-[10]">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-end mx-auto p-4">
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <button
        type="button"
        onclick="scrollToSection(event, 'contacto')"
        class="text-white bg-primary hover:bg-secondary focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-4 py-2 text-center"
      >
        Contacto
      </button>
      <button
        data-collapse-toggle="navbar-cta"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-barley-corn-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
        aria-controls="navbar-cta"
        aria-expanded="false"
        id="navbar-toggle"
        onclick="toggleMenu()"
      >
        <span class="sr-only">Abrir Menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"
          ></path>
        </svg>
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-cta"
    >
      <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0">
        <li>
          <a
            class="block py-2 px-3 md:p-0 rounded hover:bg-barley-corn-300 md:text-barley-corn-700 border-b-2 border-transparent hover:border-barley-corn-600"
            aria-current="page"
            onclick="scrollToSection(event, 'home')"
          >
            Home
          </a>
        </li>
        <li>
          <a
            class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-barley-corn-300 md:hover:bg-transparent md:hover:text-barley-corn-600 border-b-2 border-transparent hover:border-barley-corn-600"
            onclick="scrollToSection(event, 'actividades')"
          >
            Actividades
          </a>
        </li>
        <li>
          <a
            class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-barley-corn-300 md:hover:bg-transparent md:hover:text-barley-corn-600 border-b-2 border-transparent hover:border-barley-corn-600"
            onclick="scrollToSection(event, 'quien-soy')"
          >
            Quién soy
          </a>
        </li>
        <li>
          <a
            class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-barley-corn-300 md:hover:bg-transparent md:hover:text-barley-corn-600 border-b-2 border-transparent hover:border-barley-corn-600"
            onclick="scrollToSection(event, 'sobre-mi')"
          >
            Sobre mi
          </a>
        </li>
        <li>
          <a
            class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-barley-corn-300 md:hover:bg-transparent md:hover:text-barley-corn-600 border-b-2 border-transparent hover:border-barley-corn-600"
            onclick="scrollToSection(event, 'prensa')"
          >
            Prensa
          </a>
        </li>
        <li>
          <a
            class="mr-4 block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-barley-corn-300 md:hover:bg-transparent md:hover:text-barley-corn-600 border-b-2 border-transparent hover:border-barley-corn-600"
            onclick="scrollToSection(event, 'bologna')"
          >
            Bologna
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script is:inline>
  function scrollToSection(event, sectionId) {
    event.preventDefault();
    const section = document.getElementById(sectionId);
    const offset = 5 * 16; // 3rem in pixels
    const sectionPosition = section.getBoundingClientRect().top + window.scrollY - offset;
    window.scrollTo({ top: sectionPosition, behavior: 'smooth' });
  }

  function toggleMenu() {
    const navbar = document.getElementById('navbar-cta');
    navbar.classList.toggle('hidden');
  }

  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('section');
    const navLinks = document.querySelectorAll('nav a');

    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          navLinks.forEach(link => {
            link.classList.remove('border-barley-corn-600');
            if (link.onclick.toString().includes(entry.target.id)) {
              link.classList.add('border-barley-corn-600');
            }
          });
        }
      });
    }, {
      threshold: 0.5
    });

    sections.forEach(section => {
      observer.observe(section);
    });
  });
</script>

<style>
  		nav {
		  background-color: rgba(248, 247, 238, 0.8); /* Ajusta los valores RGBA según el color deseado */
		  backdrop-filter: blur(10px); /* Ajusta el valor del desenfoque según sea necesario */
		}
    a {
      cursor: pointer;
    }
</style>